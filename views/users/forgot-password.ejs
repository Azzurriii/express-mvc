<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password | 3TGStore</title>
    <link rel="icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-header">
          <h1>Reset Password</h1>
          <p>Enter your email to receive instructions</p>
        </div>

        <% if (typeof error !== 'undefined') { %>
        <div class="error-message"><%= error %></div>
        <% } %>

        <form action="/users/forgot-password" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Enter your email"
              autocomplete="email"
            />
          </div>

          <button type="submit" class="auth-button">Send Reset Link</button>
        </form>

        <div class="auth-links">
          <p>Remember your password? <a href="/users/login">Sign In</a></p>
          <p><a href="/">Back to Home</a></p>
        </div>
      </div>
    </div>

    <div class="modal-overlay" id="modalOverlay">
      <div class="success-modal">
        <div class="success-icon">
          <i class="fas fa-check"></i>
        </div>
        <h2>Email Sent!</h2>
        <p>Password reset instructions have been sent to your email.</p>
        <button class="modal-button" id="modalButton">Return to Login</button>
      </div>
    </div>
  </body>
</html>
